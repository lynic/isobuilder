{
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "echo foo > /tmp/world"
            ]
        }
    ],
    "builders": [
        {
            "type": "vmware-iso",
            "iso_url": "http://releases.ubuntu.com/releases/xenial/ubuntu-16.04.5-server-amd64.iso",
            "disk_size": 320000,
            "vm_name": "packer-ubuntu-16.04",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait>",
                "<f6><esc>",
                " ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg <enter><wait>"
            ],
            "http_directory": "http",
            "iso_checksum": "24636fd103a2a43c95659f1c3c63718e",
            "iso_checksum_type": "md5",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_timeout": "10m",
            "guest_os_type": "ubuntu",
            "shutdown_command": "sudo shutdown -P now",
            "version": "11",
            "format": "ova",
            "output_directory": "output-ubuntu-1604"
        }
    ],
    "post-processors": [
        {
            "type": "shell-local",
            "inline": [
                "/Applications/VMware\\ Fusion.app/Contents/Library/VMware\\ OVF\\ Tool/ovftool output-ubuntu-1604/packer-ubuntu-16.04.vmx output-ubuntu-1604/packer-ubuntu-16.04.ova"
            ]
        }
    ]
}