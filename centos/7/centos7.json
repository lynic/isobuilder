        }
    ],
    "post-processors": [
        {
            "type": "shell-local",
            "inline": [
                "/Applications/VMware\\ Fusion.app/Contents/Library/VMware\\ OVF\\ Tool/ovftool output-vmware-iso/packer-vmware-iso.vmx output-vmware-iso/packer-vmware-iso.ova"
