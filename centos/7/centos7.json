{
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "echo foo > /tmp/world"
            ]
        }
    ],
    "builders": [
        {
            "type": "vmware-iso",
            "iso_url": "http://mirrors.aliyun.com/centos/7.5.1804/isos/x86_64/CentOS-7-x86_64-DVD-1804.iso",
            "iso_checksum": "506e4e06abf778c3435b4e5745df13e79ebfc86565d7ea1e128067ef6b5a6345",
